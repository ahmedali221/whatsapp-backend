# ============================================
# WA Project Backend - Environment Variables
# ============================================
# Copy this file to .env and update with your actual values
# Command: cp env.example .env
# NEVER commit the .env file to version control

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3050
EXTERNAL_PORT=3050

# ============================================
# Database Configuration
# ============================================
# For Docker Compose, DB_HOST should be 'postgres' (service name)
# For external database, use the actual hostname/IP
DB_HOST=postgres
DB_PORT=5432
DB_EXTERNAL_PORT=5434
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
DB_NAME=wa_project_db
DB_SSL=false

# ============================================
# JWT Authentication Configuration
# ============================================
# IMPORTANT: Generate a strong random secret (minimum 32 characters)
# You can generate one using: openssl rand -base64 32
# Note: JWT_EXPIRATION is used by the auth module, JWT_EXPIRES_IN is for docker-compose
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_MIN_32_CHARACTERS
JWT_EXPIRATION=7d
JWT_EXPIRES_IN=7d

# ============================================
# CORS Configuration
# ============================================
# Frontend URL for CORS (include protocol and port if not 80/443)
# Example: https://yourdomain.com or http://localhost:5173
FRONTEND_URL=https://your-frontend-domain.com

# ============================================
# Optional Configuration
# ============================================
# LOG_LEVEL=info
# MAX_REQUEST_SIZE=10mb

# ============================================
# Notes:
# ============================================
# 1. Change all passwords and secrets before deploying to production
# 2. Use strong passwords (mix of letters, numbers, special characters)
# 3. JWT_SECRET should be at least 32 characters long
# 4. For production, set DB_SSL=true if using SSL connection
# 5. Update FRONTEND_URL with your actual frontend domain
# 6. PORT is the internal container port (default: 3050)
# 7. EXTERNAL_PORT is the host port that maps to container port 3050
# 8. DB_PORT is the internal container database port (5432)
# 9. DB_EXTERNAL_PORT is the host port that maps to container database port (default: 5434)

